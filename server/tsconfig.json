{
    "compilerOptions": {
      "target": "esnext",
      "module": "NodeNext",
      "noImplicitAny": false,
      "baseUrl": "./src",                                  
      "typeRoots": [
        "@types",
        "./node_modules/@types",
      ],
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": false,
    }
  }